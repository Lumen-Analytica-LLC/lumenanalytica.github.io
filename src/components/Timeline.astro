---
interface TimelineItem {
	years: string;
	industry: string;
	role: string;
	description: string;
	insight: string;
}

const timelineItems: TimelineItem[] = [
	{
		years: "2007 – 2014",
		industry: "Higher Education",
		role: "Institutional Systems & Academic Data",
		description: "Worked within a local university supporting academic and administrative systems. Built early foundations in data reliability, reporting, and cross-departmental coordination—where accuracy and trust were non-negotiable.",
		insight: "Learned how data supports long-term institutions, not just short-term metrics."
	},
	{
		years: "2014 – 2018",
		industry: "Healthcare",
		role: "IT Service Delivery — Hospital Market",
		description: "Served as IT Service Delivery Manager for a hospital market. Owned system reliability, incident response, and operational reporting in a regulated, high-stakes environment.",
		insight: "Where data quality isn't theoretical—it affects patient care."
	},
	{
		years: "2018 – 2021",
		industry: "Supply Chain",
		role: "Data Development — Manufacturing & Brewing",
		description: "Built and maintained data pipelines supporting production, logistics, and inventory for a brewing company. Focused on translating operational reality into analytics leadership could act on.",
		insight: "Learned how physical systems break—and how data should reflect that honestly."
	},
	{
		years: "2021 – 2024",
		industry: "IoT & Telematics",
		role: "Platform Data Engineering — Platform Science (Startup)",
		description: "Designed and scaled data systems for connected vehicles and telematics platforms. Worked with real-time data, event streams, and fast-moving product teams.",
		insight: "Speed, scale, and ambiguity—where bad assumptions show up immediately."
	},
	{
		years: "2024 – Present",
		industry: "Finance",
		role: "DataOps & SRE Systems — Credit Union",
		description: "Building reliable data infrastructure and operational systems for a financial institution. Focused on observability, automation, and engineering practices that ensure systems remain trustworthy and auditable under regulatory scrutiny.",
		insight: "Where data systems must be boring, correct, and defensible."
	}
];
---

<div class="timeline">
	{timelineItems.map((item, index) => (
		<div class="timeline-item" data-index={index}>
			<div class="timeline-marker">
				<div class="timeline-dot"></div>
				{index < timelineItems.length - 1 && <div class="timeline-line"></div>}
			</div>
			<div class="timeline-content">
				<div class="timeline-header">
					<span class="timeline-years">{item.years}</span>
					<span class="timeline-industry">{item.industry}</span>
				</div>
				<h3 class="timeline-role">{item.role}</h3>
				<p class="timeline-description">{item.description}</p>
				<p class="timeline-insight">{item.insight}</p>
			</div>
		</div>
	))}
</div>

<style>
	.timeline {
		position: relative;
		padding: 2rem 0;
	}

	.timeline-item {
		display: grid;
		grid-template-columns: 40px 1fr;
		gap: 1.5rem;
		margin-bottom: 3rem;
		opacity: 0;
		transform: translateY(20px);
		animation: fadeInUp 0.6s ease forwards;
	}

	.timeline-item:nth-child(1) { animation-delay: 0.1s; }
	.timeline-item:nth-child(2) { animation-delay: 0.2s; }
	.timeline-item:nth-child(3) { animation-delay: 0.3s; }
	.timeline-item:nth-child(4) { animation-delay: 0.4s; }
	.timeline-item:nth-child(5) { animation-delay: 0.5s; }

	@keyframes fadeInUp {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.timeline-item:last-child {
		margin-bottom: 0;
	}

	.timeline-marker {
		position: relative;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.timeline-dot {
		width: 16px;
		height: 16px;
		border-radius: 50%;
		background: var(--accent-regular);
		border: 3px solid var(--gray-999);
		box-shadow: 0 0 0 4px var(--gray-900);
		flex-shrink: 0;
		z-index: 2;
		transition: all 0.3s ease;
	}

	.timeline-item:hover .timeline-dot {
		transform: scale(1.2);
		box-shadow: 0 0 0 6px var(--gray-900);
	}

	.timeline-line {
		width: 2px;
		flex-grow: 1;
		background: linear-gradient(
			to bottom,
			var(--accent-regular),
			var(--gray-800)
		);
		margin-top: 0.5rem;
		min-height: 60px;
	}

	.timeline-content {
		padding-bottom: 2rem;
	}

	.timeline-header {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		margin-bottom: 0.5rem;
		align-items: center;
	}

	.timeline-years {
		font-size: var(--text-sm);
		font-weight: 600;
		color: var(--accent-regular);
		letter-spacing: 0.05em;
		text-transform: uppercase;
	}

	.timeline-industry {
		font-size: var(--text-sm);
		color: var(--gray-400);
		padding: 0.25rem 0.75rem;
		background: var(--gray-900);
		border-radius: 1rem;
		border: 1px solid var(--gray-800);
	}

	.timeline-role {
		font-size: var(--text-lg);
		color: var(--gray-0);
		margin: 0.5rem 0 1rem 0;
		font-weight: 600;
		line-height: 1.3;
	}

	.timeline-description {
		color: var(--gray-200);
		line-height: 1.6;
		margin: 0 0 1rem 0;
	}

	.timeline-insight {
		color: var(--gray-300);
		font-style: italic;
		margin: 0;
		padding-left: 1rem;
		border-left: 2px solid var(--accent-regular);
		line-height: 1.5;
	}

	@media (min-width: 50em) {
		.timeline {
			padding: 2rem 0 2rem 2rem;
		}

		.timeline-item {
			grid-template-columns: 60px 1fr;
			gap: 2rem;
		}

		.timeline-dot {
			width: 20px;
			height: 20px;
		}

		.timeline-header {
			gap: 1rem;
		}

		.timeline-years {
			font-size: var(--text-md);
		}

		.timeline-industry {
			font-size: var(--text-sm);
		}

		.timeline-role {
			font-size: var(--text-xl);
		}
	}
</style>
