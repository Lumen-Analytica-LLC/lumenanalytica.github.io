---
import { getCollection } from 'astro:content';
import ContactCTA from '../components/ContactCTA.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = (await getCollection('work')).sort(
    (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
    title="Our Services | Lumen Analytica"
    description="Learn about Lumen Analytica's offered services"
>
    <div class="stack gap-20">
        <main class="wrapper stack gap-8">
            <Hero
                title="Our Services"
                tagline="We provide end-to-end data engineering, analytics, and optimization solutions — from data warehousing and automation to complex modeling and simulation — geared especially toward small to mid-sized institutions that lack in-house engineering or analytics teams."
                align="start"
            />
            <Grid variant="offset">
                {
                    projects.map((project) => (
                        <li>
                            <PortfolioPreview project={project} />
                        </li>
                    ))
                }
            </Grid>
        </main>
        <ContactCTA />
    </div>
</BaseLayout>
